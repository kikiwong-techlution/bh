<view class="user-card">
  <view class="user-card-top">
    <view class="userinfo">
      <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
      <open-data class="userinfo-nickname" type="userNickName"></open-data>
    </view>
    <view class="userpage">
      <text class="userpage-text">个人主页</text>
      <image class="userpage-image" src="/image/icon/right-1.png"></image>
    </view>
  </view>
  <view class="user-card-list">
    <view class="user-card-list-item" wx:for="{{userlist}}" wx:key="index" wx:for-item="item">
      <view class="view-left">{{item.amount}}</view>
      <view class="view-right">{{item.type}}</view>
    </view>
  </view>
</view>