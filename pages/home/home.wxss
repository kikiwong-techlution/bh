/*navbar页面*/
.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
  
}
 
.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 85rpx;
  
  font-size: 30rpx;
  
}
.tab-item {
  width: 25%;
  text-align: center;
  color:#777;
  font-weight: bold;
  
}
.swiper {
  height: 1000px;
  background: white;
 
}
.on {
  color: #136DFF;
  border-bottom: 3rpx solid  rgba(19, 110, 255, 0.699);
  border-radius: 1rpx;
}

/*我的提问*/
.quiz{
  display: flex;
  line-height: 180rpx;
  text-align: center;
  align-content: center;
  justify-content: center;
  color: #aaa;
  font-weight: 500;

}
.quiz-list{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid whitesmoke;
  padding-bottom: 10px;
}
.quiz-list .title{
  font-size: 18px;
   font-weight: 500;
   color:#333;
   margin-bottom: 5px;
   margin-left: 5px;
}
.quiz-list .detail{
  display: flex;
   font-size: 14px;
   margin-top: 15px;
   margin-left: 10px;
   align-items: center;
   color: #666;
}

/*我的回答*/
.question{
  display: flex;
  line-height: 180rpx;
  text-align: center;
  align-content: center;
  justify-content: center;
  color: #aaa;
  font-weight: 500;

}
.answer-list{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid whitesmoke;
  padding-bottom: 10px;
}
.answer-list .answerTitle{
  font-size: 15px;
   font-weight: 500;
   color:#333;
   margin-bottom: 5px;
   margin-left: 5px;
}
.answer-list .answerDetail{
  display: flex;
   font-size: 14px;
   margin-top: 5px;
   margin-left: 8px;
   align-items: center;
   color: #666;
   font-weight: 400;
}

/*收藏夹、收藏列表*/
.collection{
  display: flex;
  line-height: 150rpx;
  text-align: center;
  align-content: center;
  justify-content: center;
  color: #aaa;
  font-weight: 500;
  font-size: 35rpx;
}
.list{
  margin-top:5rpx;
}
.list_head{
    border-bottom: 1px solid;
    border-color: whitesmoke;
    padding: 10px;
    font-size: 30rpx;
    color:#aaa;
    font-weight: 500;
    
}
.display_show{
    display: block;
    border-bottom: 1px solid;
    border-color:whitesmoke;
    padding: 10px;
    font-size: 28rpx;
    color: #aaa;
    font-weight: 500;
}
.display_none{
    display: none;
}

/*最近点赞*/
.like{
  display: flex;
  line-height: 180rpx;
  text-align: center;
  align-content: center;
  justify-content: center;
  color: #aaa;
  font-weight: 500;

}