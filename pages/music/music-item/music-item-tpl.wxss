.music-container{
  flex-direction: row;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(154, 186, 238, 0.37);
  
 }
 .music-number{
   font-weight: 600;
   font-size: 40rpx;
   font-family: 'Courier New', Courier, monospace;
   color: #136DFF;
   width:3%;
   padding-left: 15px;
   text-align: center;
   line-height: 3;
 }
 .music-title{
   font-size: 18px;
   font-weight: 600;
   color:#333;
   margin-bottom: 10px;
   margin-left: 5px;
   width:62%;
 }
 .music-img{
   width:30%;
  
 }
 .music-img image{
   width: 100%;
   height: 130rpx;
   border-bottom: 1px solid white;
  border-radius: 10px;
 }
.singer{
  display: flex;
   font-size: 30rpx;
   line-height: 16px;
   margin-top: 30rpx;
   align-items: center;
   color: #666;
}

