/* pages/main/answer-detail/write/write.wxss */
.answerTitle{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 5rpx;
  background-color: #fff;
  border-bottom: 1px solid whitesmoke;
  padding-bottom: 5px;
 }
.answerTitle text{
  font-size: 18px;
   font-weight: 600;
   color:#333;
   margin-bottom: 5px;
   margin-left: 10px;
   margin-right: 1px;
}

.answerDetail {
  font-size: 30rpx;
  padding: 3%;
  width: 94%;
  height: 200px;
  border-bottom: 1px solid whitesmoke;
  
}
.placeholder{
  font-size: 35rpx;
  color: gray;
}
.placeholder-1{
  font-size: 30rpx;
  color: gray;
}
.sent{
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  align-items: center;
  width:20%;
  height: 70rpx;
  margin-top: 10rpx;
  
}
.sent text{
  display: flex;
  font-size: 18px;
  justify-content: center;
  text-align: center;
  color: #136DFF;
  
  border: 1px solid #136DFF;
  border-radius: 5px;
  font-weight: bold;
  padding: 3px 8px;
  
}