  padding: 3%;
  width: 94%;
  height: 50px;
  border-top: 1px solid whitesmoke;
  
}
.detail {
  font-size: 30rpx;
  padding: 3%;
  width: 94%;
  height: 200px;
  border-top: 1px solid whitesmoke;
  border-bottom: 1px solid whitesmoke;
  
}
.placeholder{
  font-size: 35rpx;
  color: gray;
}
.placeholder-1{
  font-size: 30rpx;
