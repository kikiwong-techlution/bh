.answer-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top:1px solid #ededed;
  padding-bottom: 5px;
  width: 100%;
  height: 100%;

}
.author-box{
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.author-box image{
  width: 70rpx;
  height: 70rpx;
}
.author-box text{
  margin-left: 25rpx;
  font-size: 15px;
}

.answerImg{
  width: 100%;
  height: 450rpx;
  margin-bottom: 15px;
}
.answer-content{
  color: #333;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.answer-item{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}
 .comment{
   height: 16px;
   width: 16px;
   margin-right: 8px;
 }
 .like{
    height: 18px;
   width: 18px;
   margin-right: 6px;
 }
.answer-item text{
  margin-right: 20px;
}